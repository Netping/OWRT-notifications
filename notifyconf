config globals 'globals'
	list event 'temperature.Температура'
	list event 'userlogin.Вход пользователя'
	list event 'userlogout.Выход пользователя'
	list method 'email.Почта'
	list method 'syslog.Журнал'
	list method 'snmptrap.Отправить snmp сообщение'
	list method 'sms.Сообщение SMS'

config notify 'prototype'
	option name 'Notify'
	option state '0'
	option event 'temperature'
	option trigger ''
	option method 'email'
	option text 'Message text here'
	option sendto 'addr1,addr2'
	option timetable 'datetime1-datetime2,datetime3-datetime4'

config notify
	option name 'Notify 1'
	option state '1'
	option event 'temperature'
	option trigger 'temp>70&sensor=sensor1'
	option method 'email'
	option text 'Warning: overheat'
	option sendto 'lowpold@gmail.com'
	option timetable '30/08/2021 20:01:13-01/09/2021 20:11:13,30/08/2021 12:15:13-30/08/2021 13:15:13'
